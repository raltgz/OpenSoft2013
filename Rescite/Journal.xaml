<Page x:Class="Citeseer.JournalPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
	Title="Journal">

    <Grid x:Name="author_profile" MaxWidth="300" MinWidth="100" Margin="0,0,0,0" Background="White" Height="81">
        <Border BorderBrush="DarkGray" BorderThickness="1" HorizontalAlignment="Stretch" Height="81" VerticalAlignment="Top"  Margin="0,0,0,-17">
            <StackPanel Margin="5,5,5,-1">
                <TextBlock x:Name="journal_name" TextWrapping="Wrap" Padding="3,0,0,0" Text="" FontWeight="Bold" FontSize="15" TextAlignment="Justify" Height="21"/>
                <DockPanel/>
                <DockPanel/>
                <TextBlock Padding="3,3,0,0" Height="25"><Hyperlink x:Name="profile" Click="showProfile" ><Run Text="View Details"/></Hyperlink></TextBlock>
                <TextBlock Padding="3,3,0,0" Height="25"><Hyperlink x:Name="stats" Click="showStats" ><Run Text="View Analytics"/></Hyperlink></TextBlock>
            </StackPanel>
        </Border>
    </Grid>

</Page>
